<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TransactionUseMaterials">

    <include
        layout="@layout/app_bar_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <TextView android:id="@+id/date_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="Date:"
                    android:gravity="left"
                    android:textSize="20sp"/>

                <TextView android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="12dp"
                    android:text="asdf"
                    android:layout_toRightOf="@id/date_today"
                    android:textSize="20sp"/>

                <TextView android:id="@+id/transaction_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Transaction ID:"
                    android:layout_below="@id/date_today"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/transaction_id"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@+id/transaction_id"
                    android:text="asdf"
                    android:textSize="20sp"/>


            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <!-- Item -->
                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/spinnerItem"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:hint="Select Item Type"
                    android:textColorHint="#bdbdbd"
                    app:met_floatingLabel="normal" />


                <!-- quantity Label -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_qty"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/spinnerItem">

                    <EditText
                        android:id="@+id/txtQty"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Qty" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <!-- Item -->
                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/spinnerItemName"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:hint="Select Item"
                    android:textColorHint="#bdbdbd"
                    app:met_floatingLabel="normal" />


                <!-- quantity Label -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_qty2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/spinnerItemName">

                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <!-- Delivery checkbox -->

            <!-- adress Label -->

            <!-- Submit -->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnAdd"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Add to Cart!"/>
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnView"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:text="View"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>