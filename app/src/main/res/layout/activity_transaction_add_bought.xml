<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/app_bar_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="56dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="left"
                    android:text="Date:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#555555" />


                <TextView
                    android:id="@+id/txtTransactionID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtDate"
                    android:layout_marginBottom="10dp"
                    android:text="Transaction ID:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#555555" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <!-- Item -->
                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/spinnerSupplierName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:hint="Select Supplier"
                    android:textColorHint="#bdbdbd"
                    app:met_floatingLabel="normal" />


                <!-- quantity Label -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_supplierName"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp">

                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <EditText
                android:id="@+id/txtContactNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:inputType="text" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_contactNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.design.widget.TextInputLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <!-- Spinner for item type-->
                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/spinnerType"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:hint="Select Type"
                    android:textColorHint="#bdbdbd"
                    app:met_floatingLabel="normal" />

                <!-- quantity Label -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_qty"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/spinnerType">

                    <EditText
                        android:id="@+id/txtQty"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Qty/Kg" />
                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <!-- Item -->
                <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                    android:id="@+id/spinnerItemName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:hint="Select Item"
                    android:textColorHint="#bdbdbd"
                    app:met_floatingLabel="normal" />


                <!-- quantity Label -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_qty2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_toEndOf="@id/spinnerItemName">

                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <!-- Delivery checkbox -->

            <!-- adress Label -->

            <!-- Submit -->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnAdd"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Add to Cart!" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btnView"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"

                android:text="View" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>