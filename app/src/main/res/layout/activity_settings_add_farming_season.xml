<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.SettingsAddFarmingSeason">

    <include layout="@layout/app_bar_main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="56dp">


            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/spinnerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:hint="Select Crop"
                android:textColorHint="#bdbdbd"
                app:met_floatingLabel="normal" />


            <EditText
                android:id="@+id/txtHectare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hectare Size"
                android:inputType="number" />

            <EditText
                android:id="@+id/txtSeedsQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Seeds Quantity"
                android:inputType="number" />

            <EditText
                android:id="@+id/txtFertilizerQty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Fertilizer Quantity"
                android:inputType="number" />

            <EditText
                android:id="@+id/txtInsecticides"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Insecticides Quantity"
                android:inputType="number" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>